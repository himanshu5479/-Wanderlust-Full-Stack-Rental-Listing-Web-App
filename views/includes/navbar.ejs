<style>
  /* Main search button styling */
  .btn-search {
    background-color: rgb(204, 73, 73);
    color: #fff;
    border-radius: 25px;
    padding: 0.4rem 0.8rem;
    font-weight: 500;
    border: none;
    font-size: 0.9rem;
  }

  .btn-search:hover {
    background-color: rgb(180, 60, 60);
  }

  .btn-search i {
    margin-right: 0.3rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.4rem 0.8rem;
    font-size: 1rem;
    border: 1px solid #ccc;
    flex-grow: 1;
  }

  .search-wrapper {
    max-width: 500px;
    margin: 350px;
    padding: 0 1rem;
    width: 100%;
  }

  .search-form {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .navbar-actions {
  display: flex;
  align-items: center;
  margin-left: auto;
  margin-top: -40px;
}


  /* Mobile-specific styling */
  @media (max-width: 768px) {
    .search-wrapper {
      order: 3;
      width: 100%;
      padding: 0.5rem 1rem;
    }

    .search-form {
      display: none;
      flex-direction: row;
      gap: 0.5rem;
      margin-top: 0.5rem;
    }

    .search-form.show {
      display: flex !important;
    }

    .search-inp {
      font-size: 0.85rem;
    }

    .btn-search {
      font-size: 0.8rem;
      padding: 0.35rem 0.7rem;
    }

    .navbar-collapse {
      margin-top: 0.5rem;
      text-align: center;
      background-color: #fff;
      border-radius: 10px;
      padding: 1rem;
      box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.05);
    }

    .navbar-nav .nav-item {
      margin: 10px 0;
      border: 1px solid #ccc;
      border-radius: 10px;
    }

    .navbar-nav .nav-link {
      padding: 0.6rem;
      font-weight: 500;
    }
    .nav-link {
    color: #dc3545 !important;
}

    .search-icon-mobile {
      display: inline-block;
      font-size: 1.3rem;
      background: none;
      border: none;
      color: #333;
      margin-left: 16rem;
    }
  }

  @media (min-width: 769px) {
    .search-icon-mobile {
      display: none;
    }

    .search-form {
      display: flex !important;
      align-items: center;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">

    <!-- Logo -->
<div class="setall">
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i>
    </a>
<div class="navbar-actions">
    <!-- Search Icon for Mobile -->
    <button class="search-icon-mobile" id="toggleSearch">
      <i class="fa-solid fa-magnifying-glass"></i>
    </button>

    <!-- Toggler for mobile -->
    <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</div>
    <!-- Search Bar -->
    <div class="search-wrapper">
      <form class="search-form" role="search" id="searchForm">
        <input class="form-control search-inp" type="search" placeholder="Search Destinations" aria-label="Search" />
        <button class="btn btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>
    </div>

    <!-- Navigation Items -->
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item">
          <a class="nav-link" href="/listings"><b>Explore</b></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listings/new"><b>Wanderlust your home</b></a>
        </li>
        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><strong><b>Sign Up</b></strong></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><strong><b>Log in</b></strong></a>
          </li>
        <% } %>
        <% if (currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Log out</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<script>
  // Toggle search bar in mobile view
  document.addEventListener("DOMContentLoaded", () => {
    const toggleBtn = document.getElementById("toggleSearch");
    const searchForm = document.getElementById("searchForm");

    toggleBtn.addEventListener("click", () => {
      searchForm.classList.toggle("show");
    });
  });
</script>
